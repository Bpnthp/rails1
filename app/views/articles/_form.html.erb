<div class="container mt-5"">
<%= form_with model: article, local: true, class: 'form-container' do |form| %>
  <div class="form-group">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="text-danger mt-1"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :body, class: 'form-label' %>
    <%= form.text_area :body, class: 'form-control' %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="text-danger mt-1"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group -3">
    <%= form.label :status, class: 'form-label' %>
    <%= form.select :status, Visible::VALID_STATUSES, { selected: article.status || 'public' }, class: 'form-select w-25' %>
  </div>
   <div class="form-group mt-3">
    <%= form.submit class: 'btn btn-primary' %>
    <%= link_to "Back", root_path, class: 'btn btn-secondary ml-2' %>
  </div>
<% end %>
</div>
