<% unless comment.archived? %>
  <div class="card mb-3">
    <div class="card-body">
      <p>
        <strong>Commenter:</strong>
        <%= comment.commenter %>
      </p>

      <p>
        <strong>Comment:</strong>
        <%= comment.body %>
      </p>

      <p>
        <%= link_to "Destroy Comment", [comment.article, comment], class: 'btn btn-danger', data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %>
      </p>
    </div>
  </div>
<% end %>

