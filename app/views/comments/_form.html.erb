<%= form_with model: [ @article, @article.comments.build ], class: 'form-container' do |form| %>
  <div class="mb-3">
    <%= form.label :commenter, class: 'form-label' %>
    <%= form.text_field :commenter, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: 'form-label' %>
    <%= form.text_area :body, class: 'form-control' %>
  </div>

  <div class="d-flex gap-3 mb-3">
    <%= form.label :status, class: 'form-label' %>
    <%= form.select :status, Visible::VALID_STATUSES, { selected: 'public' }, class: 'form-select w-25' %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
    
  </div>

<% end %>